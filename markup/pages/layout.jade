doctype html
html(class="no-js", lang="ru")

	include ../components/head/head
	include ../components/header/header
	include ../components/menu/menu
	include ../components/article-block/article-block
	include ../components/article-block-second/article-block-second
	include ../components/list-sub-categories/list-sub-categories
	include ../components/article-block-third/article-block-third
	include ../components/widget/widget
	include ../components/article-content/article-content
	include ../components/breadcrumbs/breadcrumbs
	include ../components/social/social
	include ../components/comments/comments
	include ../components/header-article/header-article
	include ../components/footer/footer

	head
		+head(head.defaults)
	body
		block variables
			- var page = 'default';
		block header
			+header
			if (page != 'default')
				+list-sub-categories
			main.main
				block content
		block footer
			+footer
		.overlay
		//- Main scripts. You can replace it, but I recommend you to leave it here
		script(src='%=static=%js/main%=hash=%%=min=%.js')